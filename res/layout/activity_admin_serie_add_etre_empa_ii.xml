<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.metacog.AdminSerieAddEtreEmpaIIActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metacog" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="66dp"
        android:text="Grande image :" />

    <Button
        android:id="@+id/add_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="27dp"
        android:text="Choississez la grand image" />

    <Button
        android:id="@+id/valid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="233dp"
        android:text="Valider" />

    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_answer"
        android:layout_alignRight="@+id/TextView01"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_answer"
        android:layout_marginBottom="29dp"
        android:text="Tapez la bonne  réponse ci-dessous" />

    <Button
        android:id="@+id/add_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_answer"
        android:layout_toRightOf="@+id/edit_answer"
        android:text="Ajoutez la bonne réponse" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_proposition"
        android:layout_alignLeft="@+id/add_image1"
        android:text="Tapez une proposition de réponse ci-dessous" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/add_answer"
        android:text="Bonne réponse" />

    <TextView
        android:id="@+id/text_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/valid_button"
        android:layout_toRightOf="@+id/textView4"
        android:text="Vous n&apos;avez pas encore donné la bonne réponse" />

    <Button
        android:id="@+id/add_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_proposition"
        android:layout_alignBottom="@+id/edit_proposition"
        android:layout_toRightOf="@+id/edit_proposition"
        android:text="Ajoutez une proposition de réponse" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_answer"
        android:layout_centerVertical="true"
        android:text="Proposition de réponse :" />

    <EditText
        android:id="@+id/edit_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/add_image1"
        android:layout_marginBottom="34dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_proposition"
        android:layout_toRightOf="@+id/textView4"
        android:text="Vous n&apos;avez pas eencore donné de proposition" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_image1"
        android:layout_toRightOf="@+id/add_proposition"
        android:text="Petite image :" />

    <TextView
        android:id="@+id/text_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_image1"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/TextView02"
        android:text="Choississez une image" />

    <TextView
        android:id="@+id/text_petite_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="Choisissez une image" />

    <Button
        android:id="@+id/add_petite_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_image1"
        android:layout_toRightOf="@+id/add_proposition"
        android:text="Choisissez la petite image" />
    
</RelativeLayout>