<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminSerieAddSauterConcluActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metacog" />

    <Button
        android:id="@+id/valid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="81dp"
        android:layout_marginRight="114dp"
        android:text="Valider" />

    <Button
        android:id="@+id/add_image_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:text="Ajouter une autre image" />

    <LinearLayout
        android:id="@+id/linearLayoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_image_field"
        android:layout_below="@+id/add_image_field"
        android:layout_marginTop="54dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.17"
            android:text="Image 1 :" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayoutTextView"
        android:layout_marginRight="83dp"
        android:layout_toLeftOf="@+id/valid_button"
        android:orientation="vertical" >

        <Button
            android:id="@+id/add_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisissez votre image 1" />
    </LinearLayout>

    <Button
        android:id="@+id/add_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/new_proposition"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/new_proposition"
        android:text="Ajouter la proposition" />

    <TextView
        android:id="@+id/text_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/new_proposition" />

    <EditText
        android:id="@+id/new_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/valid_button"
        android:layout_alignLeft="@+id/linearLayoutTextView"
        android:layout_marginBottom="44dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/valid_button"
        android:layout_alignLeft="@+id/new_proposition"
        android:text="Proposition de réponse :" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_proposition"
        android:layout_alignLeft="@+id/new_proposition"
        android:text="Ajouter des propositions de réponse"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/text_petite_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/valid_button"
        android:layout_alignLeft="@+id/textView2"
        android:text="Taper la bonne réponse" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_petite_image"
        android:layout_alignBottom="@+id/text_petite_image"
        android:layout_toRightOf="@+id/add_image_field"
        android:ems="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>