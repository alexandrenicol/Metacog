<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminSerieAddEtreEmpaIIIActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metacog" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="48dp"
        android:text="Choississez 4 images à suivre, des propositions de réponses, et la bonne réponse" />

    <TextView
        android:id="@+id/sc_text_prop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="44dp"
        android:text="Image 1 :" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sc_text_prop"
        android:layout_below="@+id/sc_text_prop"
        android:layout_marginTop="46dp"
        android:text="Image 2 :" />

    <TextView
        android:id="@+id/sc_text_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="37dp"
        android:text="Image 3 :" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sc_text_answer"
        android:layout_centerVertical="true"
        android:text="Image 4 :" />

    <TextView
        android:id="@+id/eeiii_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sc_text_prop"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/sc_text_prop"
        android:text="Vous n&apos;avez pas encore selectionner d&apos;image" />

    <TextView
        android:id="@+id/eeiii_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/eeiii_image1"
        android:text="Vous n&apos;avez pas encore selectionner d&apos;image" />

    <TextView
        android:id="@+id/eeiii_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sc_text_answer"
        android:layout_alignLeft="@+id/eeiii_image2"
        android:text="Vous n&apos;avez pas encore selectionner d&apos;image" />

    <TextView
        android:id="@+id/eeiii_image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/eeiii_image3"
        android:text="Vous n&apos;avez pas encore selectionner d&apos;image" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="49dp"
        android:text="Tapez dans le champs ci-dessous une proposition de réponse et cliquez sur ajouter" />

    <EditText
        android:id="@+id/eeiii_edit_prop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="26dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/eeiii_add_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_image1"
        android:layout_alignBottom="@+id/eeiii_image1"
        android:layout_toRightOf="@+id/textView1"
        android:text="Ajoutez l&apos;image 1" />

    <Button
        android:id="@+id/eeiii_add_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_image2"
        android:layout_alignBottom="@+id/eeiii_image2"
        android:layout_alignLeft="@+id/eeiii_add_image1"
        android:text="Ajoutez l&apos;image 2" />

    <Button
        android:id="@+id/eeiii_add_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_image3"
        android:layout_alignBottom="@+id/eeiii_image3"
        android:layout_alignLeft="@+id/eeiii_add_image2"
        android:text="Ajoutez l&apos;image 3" />

    <Button
        android:id="@+id/eeiii_add_image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_image4"
        android:layout_alignBottom="@+id/eeiii_image4"
        android:layout_alignLeft="@+id/eeiii_add_image3"
        android:text="Ajoutez l&apos;image 4" />

    <Button
        android:id="@+id/eeiii_add_prop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_edit_prop"
        android:layout_alignBottom="@+id/eeiii_edit_prop"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/eeiii_edit_prop"
        android:text="Ajoutez" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eeiii_add_prop"
        android:layout_alignBottom="@+id/eeiii_add_prop"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/eeiii_add_prop"
        android:text="Proposition :" />

    <TextView
        android:id="@+id/eeiii_text_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:text="Vous n&apos;avez pas encore ajouté de proposition" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eeiii_edit_prop"
        android:layout_below="@+id/eeiii_add_prop"
        android:layout_marginTop="33dp"
        android:text="Tapez dans le champs ci-dessous la bonne réponse" />

    <EditText
        android:id="@+id/eeiii_edit_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eeiii_return"
        android:layout_alignLeft="@+id/textView10"
        android:ems="10" />

    <Button
        android:id="@+id/eeiii_add_good_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eeiii_add_prop"
        android:layout_alignTop="@+id/eeiii_edit_answer"
        android:text="Ajoutez" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eeiii_return"
        android:layout_alignLeft="@+id/textView8"
        android:text="Bonne réponse :" />

    <TextView
        android:id="@+id/eeiii_text_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:text="Vous n&apos;avez pas encore ajouté la bonne réponse" />

    <Button
        android:id="@+id/eeiii_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/eeiii_add_image4"
        android:layout_below="@+id/eeiii_text_answer"
        android:text="Valider" />

    <Button
        android:id="@+id/eeiii_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_toRightOf="@+id/eeiii_text_answer"
        android:text="Retour" />

</RelativeLayout>