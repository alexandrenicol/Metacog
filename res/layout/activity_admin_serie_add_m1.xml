<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminSerieAddM1Activity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metacog" />

    <Button
        android:id="@+id/add_question_m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="65dp"
        android:text="Choississez vos images" />

    <TextView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_question_m1"
        android:layout_below="@+id/add_question_m1"
        android:layout_marginTop="45dp"
        android:text="Image 1 :" />

    <TextView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image1"
        android:layout_below="@+id/image1"
        android:layout_marginTop="42dp"
        android:text="Image 2" />

    <TextView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image2"
        android:layout_below="@+id/image2"
        android:layout_marginTop="41dp"
        android:text="Image 3" />

    <TextView
        android:id="@+id/proposition1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image3"
        android:layout_below="@+id/image3"
        android:layout_marginTop="36dp"
        android:text="Proposition 1" />

    <TextView
        android:id="@+id/proposition2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/proposition1"
        android:layout_below="@+id/proposition1"
        android:layout_marginTop="47dp"
        android:text="Proposition 2" />

    <TextView
        android:id="@+id/proposition3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/proposition2"
        android:layout_below="@+id/proposition2"
        android:layout_marginTop="44dp"
        android:text="Proposition 3" />

    <Button
        android:id="@+id/valid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/proposition3"
        android:layout_below="@+id/proposition3"
        android:layout_marginTop="58dp"
        android:text="Valider" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="375dp"
        android:layout_toRightOf="@+id/add_question_m1"
        android:text="TextView" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image2"
        android:layout_marginLeft="256dp"
        android:layout_toRightOf="@+id/add_question_m1"
        android:ems="10" />

</RelativeLayout>